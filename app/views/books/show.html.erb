
<div class="row">
	<div class="col-xs-3">

	<% if flash[:notice] %>
 	 <p><%= flash[:notice] %></p>
	<% end %>

		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>

		<h2>New book</h2>
		<%= render 'books/form', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to user_path(@book_find.user) do %>
							<%= attachment_image_tag(@book_find.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @book_find.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book_find.title, book_path(@book_find) %></td>
					<td><%= @book_find.body %></td>
					<% if @book_find.user == current_user %>
					<td><%= link_to "Edit", edit_book_path(@book_find), class: "btn-sm btn-success edit_book_#{@book_find.id}" %></td>
					<td><%= link_to "Destroy", book_path(@book_find), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book_find.id}" %></td>
					<% end %>
				</tr>
			</table>

	</div>
</div>

